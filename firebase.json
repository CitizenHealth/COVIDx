{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "appAssociation": "AUTO",
    "rewrites": [ 
      { 
        "source": "/share/**", 
        "dynamicLinks": true 
      },
      { 
        "source": "/share**", 
        "dynamicLinks": true 
      },
      {
        "source": "!/share/**",
        "destination": "/index.html"
      }
    ]
  }
}
